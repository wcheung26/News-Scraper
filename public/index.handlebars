<div class="container">
	<div class="jumbotron text-center">
		<h1>BBC News Scraper</h1>
		<a href="/scrape"><button class="btn btn-info btn-lg">Scrape Now</button></a>
	</div>
	<div class="row list-group">
		{{#each news}}
			<div class="col-xs-6 list-group-item newsBox truncate">
				<h4 class="list-group-item-heading">
					<a href={{this.link}}>
						{{this.title}}
					</a>
				</h4> <br>
{{!-- 				<p class="list-group-item-text truncate">
					{{this.link}}
				</p> <br> --}}
				<p>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					<span class="comments">Add comment </span> 
					<span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
					<span class="viewComments"><a href="/articles/{{_id}}">View comments</a> </span><span class="badge">{{this.note.length}}</span>
				</p>
				<form action="/articles/{{this._id}}" method="POST">
					<div class="form-group">
						<input type="text" class="form-control" name="username" placeholder="Username">
						<input type="text" class="form-control" name="title" placeholder="Subject">
						<textarea class="form-control commentField" name="body" rows="3" placeholder="New comment..."></textarea>
						<button class="btn btn-primary saveButton">Save</button> <span class="showSaved"></span>
					</div>
				</form>
			</div>
		{{/each}}
